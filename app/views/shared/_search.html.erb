<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
     <%= form_tag cars_path, method: :get do %>
     <div class="search-form-control form-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "e.g. car name, year"
        %>
      <%= submit_tag "Search", class: "btn btn-flat" %>
     </div>
    <% end %>
    </div>
  </div>
</div>